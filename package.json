{
	"name": "hacknplan",
	"displayName": "HackNPlan",
	"description": "HackNPlan extension",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.49.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:hacknplan.helloWorld",
		"onCommand:hacknplan.getAllProjects",
		"onView:hacknplan"
	],
	"main": "./dist/extension",
	"contributes": {
		"configuration": {
			"title" : "Hack'N'Plan",
			"properties": {
				"hacknplan.apiKey" : {
					"type": "string",
					"default": "516cc2a8dc974d33aa0d0539b582cd89"
				}
			}
		},	
		"viewsContainers": {
			"activitybar": [
				{
					"id": "hacknplan",
					"title": "Hack N Plan",
					"icon": "assets/img/rocket.svg"
				}
			]
		},
		"views": {
			"hacknplan": [
				{
					"id": "hacknplan",
					"name": "Hack N Plan",
					"icon": "assets/img/rocket.svg",
					"contextualTitle": "Hack N Plan extension"
				}
			]
		},
		"commands": [
			{
				"command": "hacknplan.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "hacknplan.getAllProjects",
				"title": "Get All Projects"
			},
			{
				"command": "hacknplan.showTask",
				"title": "Show Task details"
			  }
		]
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"@types/vscode": "^1.49.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"ts-loader": "^8.0.4",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0",
		"webpack": "^4.44.2",
		"webpack-cli": "^3.3.12"
	},
	"dependencies": {
		"axios": "^0.19.0"
	}
}